xkb_keymap {
xkb_keycodes {
	minimum = 1;
	maximum = 255;
	<1>                  = 1;
	<2>                  = 2;
	<3>                  = 3;
};

xkb_types {
	type "default" {
		modifiers= none;
	};
};

xkb_compatibility {
	interpret.useModMapMods= AnyLevel;
	interpret.repeat= False;
	interpret VoidSymbol+AnyOfOrNone(none) {
		repeat= True;
	};
};

xkb_symbols {
	key <1>                  {
		repeat= No,
		symbols[Group1]= [                              x ],
		actions[Group1]= [                     NoAction() ]
	};
	key <2>                  {
		repeat= No,
		symbols[Group1]= [                              y ],
		actions[Group1]= [                     NoAction() ]
	};
	key <3>                  {
		repeat= No,
		symbols[Group1]= [                       NoSymbol ],
		actions[Group1]= [ LockControls(controls=none,affect=neither) ]
	};
};

};
