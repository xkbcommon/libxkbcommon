xkb_keymap {
xkb_keycodes {
	minimum = 8;
	maximum = 255;
	<A>                  = 38;
	<S>                  = 39;
	<D>                  = 40;
};

xkb_types {
	type "ONE_LEVEL" {
		modifiers= none;
	};
};

xkb_compatibility {
	interpret.useModMapMods= AnyLevel;
	interpret.repeat= False;
	interpret VoidSymbol+AnyOfOrNone(none) {
		action= NoAction();
	};
};

xkb_symbols {
	key <A>                  {
		repeat= No,
		symbols[1]= [                              a ],
		actions[1]= [                     NoAction() ]
	};
	key <S>                  {
		repeat= Yes,
		symbols[1]= [                              s ],
		actions[1]= [       RedirectKey(keycode=<A>) ]
	};
	key <D>                  {
		repeat= Yes,
		symbols[1]= [                              d ],
		actions[1]= [ RedirectKey(keycode=<S>,modifiers=Shift,clearMods=Control) ]
	};
};

};
